@model Invoice

@{ ViewData["Title"] = "Update"; }

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">@Model.InvoiceNumber Invoice Update</h2>
</div>

<form method="post" asp-controller="Invoice" asp-action="Update" class="m-2">
    @Html.AntiForgeryToken()

    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Invoice Number:</label>
        <input asp-for="InvoiceNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Invoice Date:</label>
        <br />
        <input type="date" asp-for="InvoiceDate" />
    </div>
    <div class="form-group">
        <label>Clients:</label>
        <select class="form-control" asp-for="ClientId" asp-items="ViewBag.Clients">
            <option disabled selected value="">
                ---- Select Client ----
            </option>
        </select>
    </div>
    <div class="form-group">
        <label>Projects:</label>
        <select class="form-control" asp-for="ProjectId" asp-items="ViewBag.Projects">
            <option disabled selected value="">
                ---- Select Project ----
            </option>
        </select>
    </div>
    <div class="form-group">
        <label>Note:</label>
        <textarea asp-for="Note" rows="10" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Net Amount:</label>
        <input asp-for="NetAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tax Amount (%):</label>
        <input asp-for="TaxAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label>Total Amount:</label>
        <p style="font-size:20px; font-weight:bold">@Model.TotalPrice()</p>
    </div>
    <div class="form-check">
        <label class="form-check-label">
            <input asp-for="PaymentStatus" class="form-check-input" />
            Payment Status
        </label>
    </div>
    <br />
    <br />

    <button type="submit" class="btn btn-primary btn-icon-text">
        <i class="mdi mdi-file-check btn-icon-prepend"></i>
        Submit
    </button>
    <button asp-action="List" type="submit" class="btn btn-secondary btn-icon-text">
        <i class="mdi mdi-reload btn-icon-prepend"></i>
        Cancel
    </button>
</form>
