@model Invoice
@{ ViewData["Title"] = "Info"; }

<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">@Model.InvoiceNumber Invoice Info</h2>
</div>

<form action="#" class="m-2">
    <div class="form-group">
        <label>Project Name:</label>
        <input asp-for="Project.Name" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label>Note:</label>
        <textarea asp-for="Note" class="form-control" cols="" rows="10" disabled></textarea>
    </div>
</form>

<a asp-action="List" class="btn btn-secondary btn-icon-text">
    <i class="mdi mdi-reload btn-icon-prepend"></i>
    Cancel
</a>



