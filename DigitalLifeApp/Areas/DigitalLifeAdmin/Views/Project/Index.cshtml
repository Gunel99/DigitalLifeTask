@model IEnumerable<Project>
@{ ViewData["Title"] = "Index"; }


<div style="background: #1979a9; padding: 15px; color: #fff;">
    <h2 class="m-0">Project List</h2>
</div>

@if (Model.Count() == 0)
{
<p style="text-align: center;
    font-size: 25px;
    font-family: auto;
    margin: 40px 0px;">No Projects</p> }
else
{
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {
        <tr>
            <td>@project.Name</td>
            <td>
                <form asp-route-id="@project.Id" asp-action="Delete" method="post">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                    <a class="btn btn-primary" asp-action="Update" asp-route-id="@project.Id"><i class="far fa-edit"></i></a>
                </form>
            </td>
        </tr>
}
                    </tbody>
                </table>
                                <a asp-area="DigitalLifeAdmin" asp-controller="Project" asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus" style="font-size: 15px; margin-right: 5px;"></i>
                                    Create Project
                                </a>}


